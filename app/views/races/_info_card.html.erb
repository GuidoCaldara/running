<div class="card p-3 mb-3">
  <p class ="m-0 dark-text "><strong><%= race.race_type.capitalize %></strong></p>
  <h1 class ="m-0 mb-2 dark-text"><%= race.name %></h1>
  <div class="d-flex flex-wrap">
    <p class ="mr-4 mb-1 dark-text"><i class="far fa-calendar-alt mb-0 mr-1"></i><%= race.date.strftime("%d/%m/%Y") %></p>
    <p class ="mr-4 mb-1 dark-text"><i class="fas fa-road mb-0 mr-1"></i> <%= race.distance_km %>Km</p>
    <p class ="mr-4 mb-1 dark-text"><i class="fas fa-map-marked-alt mb-0 mr-1"></i><%= race.location %></p>
    <% if @race.elevation %>
      <p class ="mr-4 dark-text"><i class="fas fa-mountain mr-1"></i><%= race.elevation %></p>
    <% end %>
  </div>
  <p><%= race.description %></p>
  <p><strong class="dark-text">Prezzo</strong>: <%= race.price %>â‚¬</p>
  <div class="d-flex justify-content-start">
    <% if current_user.reviews.where(race: @race).empty? %>
      <div class="review-form-container">
        <%= render "reviews/new", race: @race, review: Review.new%>
      </div>
    <% end %>

    <!-- <p class="mr-3 mb-0" onclick="location.href='#photos';">Foto</p> -->
    <!-- <p class="mb-0"onclick="location.href='#reviews';">Recensioni</p> -->
  </div>

  <!-- <p>Tipo Distanza: <%#= race.distance_type %></p>
  <p>Stagione: <%#= race.season %></p>
  <p>Lat: <%#= race.latitude %></p>
  <p>Lng: <%#= race.longitude %></p> -->
</div>
