<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login_form" })do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", id: "email_signin" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", id: "password_signin"  } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links_modal" %>
