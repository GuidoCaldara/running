<% if !messages.empty? %>
  <div style=" " class="alert jsalert alert alert-danger alert-dismissible fade show" role="alert">
    <% messages.each do |m| %>
      <strong><%= m %></strong>
    <% end %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% else %>
<div style=" " class="alert jsalert alert alert-success alert-dismissible fade show" role="alert">
    <strong><%= x %></strong>
  </button>
</div>

<% end %>
